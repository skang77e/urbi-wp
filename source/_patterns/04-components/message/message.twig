{% if type == 'error' %}
  {% set classes = [
    'message',
    'message--error',
    modifier_classes ? modifier_classes,
  ]|join(' ')|trim %}
{% elseif type == 'warning' %}
  {% set classes = [
    'message',
    'message--warning',
    modifier_classes ? modifier_classes,
  ]|join(' ')|trim %}
{% else %}
  {% set classes = [
    'message',
    'message--status',
    modifier_classes ? modifier_classes,
  ]|join(' ')|trim %}
{% endif %}

<div class="{{ classes }}"{% if type == 'error' %} role="alert" {% else %} role="contentinfo" {% endif %} {% if heading %}aria-label="{{ heading }}"{% endif %}>
  <div class="message__content">
    <h2 class="visually-hidden">{{ heading }}</h2>
    {% if messages|length > 1 %}
      <ul class="message__list">
        {% for message in messages %}
          <li class="message__item">{{- message -}}</li>
        {% endfor %}
      </ul>
    {% else %}
      {{- messages|first -}}
    {% endif %}
  </div>
</div>
