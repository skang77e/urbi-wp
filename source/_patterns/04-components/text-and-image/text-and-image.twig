{# text-and-image #}
{% import '@macros/urbi.macro.twig' as macros %}

{% set classes = [
  'text-and-image',
  modifier_classes ? modifier_classes,
]|join(' ')|trim %}

<div class="{{ classes }}">
  <div class="text__body">
    <h3 class="text__headline">
      {{ headline }}
    </h3>
    <div class="text__content">
      {{ text_content }}
    </div>
    {% if cta_link %}
      <div class="text__readmore">
        {{ macros.readmore(url, title) }}
      </div>
    {% endif %}
  </div>
  <div class="image" style="background-image: url({{media.src}})">
  </div>
</div>
