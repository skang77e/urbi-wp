{% extends 'base.twig' %}

{% block content %}
	{% embed '@layouts/content/content.twig' with {
		'has_constrain': true
	} %}
		{% block content %}
			<form class="password-form" action="{{ function( 'site_url', 'wp-login.php?action=postpass', 'login_post' ) | e( 'esc_url' ) }}" method="post">
				<label for="pwbox-{{ post.ID }}">Password:</label>
				<input class="password-box" name="post_password" id="pwbox-{{ post.ID }}" type="password" placeholder="Password" size="20" maxlength="20" />
				<input class="password-btn" type="submit" name="Submit" value="Submit" />
			</form>
		{% endblock %}
	{% endembed %}
{% endblock %}
