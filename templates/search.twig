{% extends 'base.twig' %}

{% block content %}
  <!-- Provided by templates/search.twig -->
  {% embed '@layouts/content/content.twig' with {
    'has_constrain': true
  } %}
    {% block content %}
      {% include '@components/page-title/page-title.twig' with {
        'page_title': __('Search results for term: ', 'urbi') ~ function('get_search_query')
      } %}
      {% for post in posts %}
        {% include '@components/teaser/teaser.twig' with {
          'url': post.link,
          'title': post.title
        } %}
      {% endfor %}
      {% include '@components/pager/pager.twig' %}
    {% endblock %}
  {% endembed %}
{% endblock %}
